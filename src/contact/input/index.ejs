<%
var pageData = {
	path: '../../',
	title: 'お問い合わせ｜BOAR Auction（ボアオークション）',
	keywords: '古美術,アンティーク,工芸,骨董,茶道具,オークション,市場,オンライン,入札,買取,神奈川,横浜',
	description: '出品依頼などボアオークションへのお問い合わせはこちら。',
};
var breadcrumb = {
	currentLabel: 'お問い合わせ',
}

%>
<!doctype html>
	<html lang="ja">
		<head>
			<%- include( '../../includes/_head', { data: pageData } ) %>
		</head>
	
		<body>
			<%- include( '../../includes/_gtmBody', { data: pageData } ) %>
			<%- include( '../../includes/_header', { data: pageData } ) %>
			<div class="container registration">
				<h2 class="title en">Contact Us</h2>
				<%- include( '../../includes/_breadcrumb', { data: breadcrumb } ) %>
				<div class="wrapper">
					<div class="single_content">
						<form action="" id="contact-form" data-parsley-validate data-parsley-trigger="focusout change">
							<div class="row">
								<div class="row_head">
									<p>お名前<span>※</span></p>
								</div>
								<div class="row_body">
									<div class="row_item_full">
										<input type="text" placeholder="例：山田 太郎" class="form_input" data-parsley-required data-parsley-error-message="名前を入力してください"   data-parsley-errors-container="#error-name">
									</div>
									<div id="error-name" class="form_error"></div>
								</div>
								
							</div>
							<div class="row">
								<div class="row_head">
									<p>電話番号<span>※</span></p>
								</div>
								<div class="row_body">
									<div class="row_item_full">
										<input type="text" placeholder="例：045-222-3535（ハイフンあり）" class="form_input" data-parsley-required data-parsley-error-message="電話番号を入力してください" data-parsley-errors-container="#error-tel" data-parsley-length="[10, 13]">
									</div>
									<div id="error-tel" class="form_error"></div>
								</div>
							</div>
							<div class="row">
								<div class="row_head">
									<p>メールアドレス<span>※</span></p>
								</div>
								<div class="row_body">
									<div class="row_item_full">
										<input type="email" placeholder="例：sample@chishin-yokohama.com" class="form_input" data-parsley-required data-parsley-error-message="メールアドレスを入力してください"  data-parsley-errors-container="#error-email" data-parsley-type="email">
									</div>
									<div id="error-email" class="form_error"></div>
								</div>
							</div>
							<div class="row">
								<div class="row_head">
									<p>お問い合わせ内容<span>※</span></p>
								</div>
								<div class="row_body">
									<div class="row_item_full"><textarea rows="4" placeholder="ご質問の内容を入力してください" class="form_input form_input-textarea" data-parsley-required data-parsley-error-message="お問い合わせ内容を入力してください" data-parsley-errors-container="#error-note"></textarea>
									</div>
									<div id="error-note" class="form_error"></div>
								</div>
							</div>
							<div class="form_lower">
								<div class="form_links">
									<p><a href="/terms/" target="_blank">利用規約</a></p>
									<p><a href="/privacy/" target="_blank">プライバシーポリシー</a></p>
								</div>
								<div class="form_agree">
									<input type="checkbox" class="form_checkbox" name="agreement" id="agreement" data-parsley-required data-parsley-mincheck="1" data-parsley-error-message="利用規約、プライバシーポリシーに同意してください" data-parsley-errors-container="#error-checks">
									<label for="agreement" class="form_label">利用規約、プライバシーポリシーに同意する</label>
									<div id="error-checks" class="form_error"></div>
								</div>
								
								<button type="submit" id="registration_submit" class="form_submit" disabled>入力内容を確認</button>
							</div>
						</form>
					</div>
				</div>
			</div>
			<%- include( '../../includes/_footer', { data: pageData } ) %>
			<%- include( '../../includes/_scripts', { data: pageData } ) %>
			<script src="../../js/parsley.min.js"></script>
			<script>
				var form = $('#contact-form');
				form.on('change',function(){
					var passedElem = $('.parsley-success');
					if(passedElem.length == 5){
						$('#registration_submit').prop('disabled',false);
					}else{
						$('#registration_submit').prop('disabled',true);
					}
				})
				
			</script>
			
		</body>
	</html>